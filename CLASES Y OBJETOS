namespace Clases_y_objetos_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //creacion de objetos

            Estudiantes Estudiante1 = new Estudiantes();
            Estudiantes Estudiante2 = new Estudiantes();
            Estudiantes Estudiante3 = new Estudiantes();
            Estudiantes Estudiante4 = new Estudiantes();
            Estudiantes Estudiante5 = new Estudiantes();

            //datos de los estudiantes

            Console.WriteLine("Ingrese los datos del primer estudiante:");

            Console.Write("Matricula: ");
            Estudiante1.Matricula = Convert.ToDouble(Console.ReadLine());

            Console.Write("Nombre: ");
            Estudiante1.Nombre = Console.ReadLine();

            Console.Write("Edad: ");
            Estudiante1.Edad = Convert.ToDouble(Console.ReadLine());

            Console.Write("Carrera: ");
            Estudiante1.Carrera = Console.ReadLine();

            Console.WriteLine("Ingrese los datos del segundo estudiante:");

            Console.Write("Matricula: ");
            Estudiante2.Matricula = Convert.ToDouble(Console.ReadLine());

            Console.Write("Nombre: ");
            Estudiante2.Nombre = Console.ReadLine();

            Console.Write("Edad: ");
            Estudiante2.Edad = Convert.ToDouble(Console.ReadLine());

            Console.Write("Carrera: ");
            Estudiante2.Carrera = Console.ReadLine();

            Console.WriteLine("Ingrese los datos del tercer estudiante:");

            Console.Write("Matricula: ");
            Estudiante3.Matricula = Convert.ToDouble(Console.ReadLine());

            Console.Write("Nombre: ");
            Estudiante3.Nombre = Console.ReadLine();

            Console.Write("Edad: ");
            Estudiante3.Edad = Convert.ToDouble(Console.ReadLine());

            Console.Write("Carrera: ");
            Estudiante3.Carrera = Console.ReadLine();

            Console.WriteLine("Ingrese los datos del cuarto estudiante:");

            Console.Write("Matricula: ");
            Estudiante4.Matricula = Convert.ToDouble(Console.ReadLine());

            Console.Write("Nombre: ");
            Estudiante4.Nombre = Console.ReadLine();

            Console.Write("Edad: ");
            Estudiante4.Edad = Convert.ToDouble(Console.ReadLine());

            Console.Write("Carrera: ");
            Estudiante4.Carrera = Console.ReadLine();

            Console.WriteLine("Ingrese los datos del quinto estudiante:");

            Console.Write("Matricula: ");
            Estudiante5.Matricula = Convert.ToDouble(Console.ReadLine());

            Console.Write("Nombre: ");
            Estudiante5.Nombre = Console.ReadLine();

            Console.Write("Edad: ");
            Estudiante5.Edad = Convert.ToDouble(Console.ReadLine());

            Console.Write("Carrera: ");
            Estudiante5.Carrera = Console.ReadLine();

            Console.WriteLine("\n Informaci√≥n de los Estudiantes ");

            // resultado

            Console.WriteLine("\nEstudiante 1:");
            Console.WriteLine("Matricula: " + Estudiante1.Matricula);
            Console.WriteLine("Nombre: " + Estudiante1.Nombre);
            Console.WriteLine("Edad: " + Estudiante1.Edad);
            Console.WriteLine("Carrera: " + Estudiante1.Carrera);

            Console.WriteLine("\nEstudiante 2:");
            Console.WriteLine("Matricula: " + Estudiante2.Matricula);
            Console.WriteLine("Nombre: " + Estudiante2.Nombre);
            Console.WriteLine("Edad: " + Estudiante2.Edad);
            Console.WriteLine("Carrera: " + Estudiante2.Carrera);

            Console.WriteLine("\nEstudiante 3:");
            Console.WriteLine("Matricula: " + Estudiante3.Matricula);
            Console.WriteLine("Nombre: " + Estudiante3.Nombre);
            Console.WriteLine("Edad: " + Estudiante3.Edad);
            Console.WriteLine("Carrera: " + Estudiante3.Carrera);

            Console.WriteLine("\nEstudiante 4:");
            Console.WriteLine("Matricula: " + Estudiante4.Matricula);
            Console.WriteLine("Nombre: " + Estudiante4.Nombre);
            Console.WriteLine("Edad: " + Estudiante4.Edad);
            Console.WriteLine("Carrera: " + Estudiante4.Carrera);

            Console.WriteLine("\nEstudiante 5:");
            Console.WriteLine("Matricula: " + Estudiante5.Matricula);
            Console.WriteLine("Nombre: " + Estudiante5.Nombre);
            Console.WriteLine("Edad: " + Estudiante5.Edad);
            Console.WriteLine("Carrera: " + Estudiante5.Carrera);
        }
    }

    class Estudiantes
    {
        //propiedades

        public double Matricula { get; set; }
        public string Nombre { get; set; }
        public double Edad { get; set; }
        public string Carrera { get; set; }


    }
}
